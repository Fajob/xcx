.orderTitle {
  height: 50px;
  background: #fff;
  font-size: 14px;
}

.orderTitle view {
  line-height: 49px;
  padding: 0 5px;
}

.orderTitleActive {
  color: #00c6f6;
  border-bottom: 1px solid #00c6f6;
}

.order {
  width: 100%;
  height: 220px;
  background: #fff;
  margin-top: 10px;
}

.order .orderInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 125px;
  border-bottom: 1px solid #eee;
}

.order .orderInfo .orderImg {
  width: 90px;
  height: 90px;
  margin: 15px;
}

.order .orderInfo .orderImg image {
  width: 90px;
  height: 90px;
}

.con_column_left {
  font-size: 12px;
}

.infoIntroduce {
  line-height: 20px;
  padding-right: 10px;
  /* display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis; */
  font-size: 14px;
  /* overflow: hidden; */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.orderPrice {
  display: flex;
  width: 100%;
  font-size: 14px;
  justify-content: space-between;
}

.totalPrice {
  display: block;
  padding-right: 10px;
  line-height: 45px;
  font-size: 12px;
  text-align: right;
  border-bottom: 1px solid #eee;
}

.btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50px;
  justify-content: flex-end;
}

.btn button {
  width: 95px;
  height: 30px;
  border-radius: 5px;
  font-size: 16px;
  line-height: 30px;
  margin-left: 0;
}

.removeOrderBtn, .delBtn {
  color: #666;
  background-color: #fff;
  margin-right: 15px;
}

.goPayBtn, .sureBtn {
  background: #fd0047;
  color: #fff;
  margin-right: 10px;
}

.hint {
  width: 100%;
  line-height: 55px;
  text-align: center;
  font-size: 12px;
  color: #666;
}

.remindGoBtn {
  color: #666;
  background-color: #fff;
  margin-right: 15px;
}

.refunding {
  width: 80px;
  height: 30px;
  color: #ff7800;
  background-color: #fff;
  border: none;
  margin-right: 15px;
  font-size: 12px;
  line-height: 30px;
  text-align: right;
}

.seeLogistics {
  width: 80px;
  height: 28px;
  line-height: 28px;
  text-align: center;
  font-size: 12px;
  color: #666;
  border: 1px solid #eee;
  position: relative;
  border-radius: 5px;
  margin-right: 15px;
}

.comment {
  width: 80px;
  height: 28px;
  line-height: 28px;
  text-align: center;
  font-size: 12px;
  color: #fff;
  border: 1px solid #eee;
  position: relative;
  border-radius: 5px;
  margin-right: 10px;
  background: #fd0047;
}
