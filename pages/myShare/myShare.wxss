page{
  background-color: #fff;
}
.shares{
  height: 80px;
  padding-left: 15px;
  line-height: 80px;
  border-bottom: 10px solid #eee;
}
.sharelist{
  
}
.title{
  color: #2fcafa;
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid #999;
  padding-left: 15px;
  padding-right: 15px;
}
.sharelist image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.sharelist .tr{
  height: 60px;
  padding-left: 15px;
  padding-right: 15px;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
} 
.sharelist .td:first-child{
  display: flex;
  flex-direction: row;
  align-items: center;
}