/* pages/myOrder/myOrder.wxss */
.my_order_title{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  line-height: 50px;
  background-color: #fff;
}
.active{
  color: #00c4f4;
  border-bottom: 2px solid #00c4f4;
}
.order_list_item1{
  background-color: #fff;
  margin-top: 10px;
}
.order_list_item1_line1{
  display: flex;
  padding: 10px;
}
.order_list_item1_line1 image{
  width: 90px;
  height: 90px;
  /* border: 1px solid grey; */
  margin-right: 10px;
}
.order_list_item1_line1_info{
  display: flex;
  flex-direction: column;
  justify-content: space-around; 
  flex: auto;
}
.order_list_item1_line1_info view{
  display: flex;
  justify-content: space-between;
}
.order_list_item1_line2{
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  height: 50px;
  line-height: 50px;
  padding: 0 10px;
  font-size: 14px;
  display:flex;
  justify-content:space-between;
}
.order_list_item1_line3{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.order_list_item1_line3 button{
  width: 100px;
  font-size: 16px;
  margin: 5px 0;
  margin-right: 10px;
}
.order_list_return{
  text-align: right;
  padding-right: 10px;
  font-size: 14px;
  color: orange;
  height: 50px;
  line-height: 50px;
}