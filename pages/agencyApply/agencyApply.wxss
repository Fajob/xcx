/* pages/agencyApply/agencyApply.wxss */

page {
  background-color: #fff;
}

.info {
  display: flex;
  flex-direction: row;
  height: 50px;
  line-height: 50px;
  padding: 0 10px;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.info view:first-child{
  flex: none;
}

.info input {
  padding-left: 10px;
  flex: auto;
}

.upload_picture{
  border-bottom: 1px solid #eee;
}
.upload_info1 {
  padding: 20px 10px;
}

.upload_info2 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 240px;
}

.upload_icon {
  width: 100px;
  height: 100px;
}
.upload_idcard{
  margin-bottom: 10px;
}
.apply_btn{
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: cneter;
}
.apply_btn button{
  background-color: #fd0047;
  height: 40px;
  line-height: 40px;
  width: 85%;
  color: #fff;
}
.review{
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.review1 image{
  width: 100px;
  height: 100px;
}
.review2{
  text-align: center;
  color: #2fcafa;
  margin: 20px 0 30px 0;
}
.review3{
  display: flex;
  flex-direction: column;
  color: #fd0047;
  text-align: center;
}